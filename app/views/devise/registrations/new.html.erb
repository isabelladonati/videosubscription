

<section id="signup" class="py-3">


<div class="container">
<div class="row">

<div class="col-md-4">

</div>


<div class="col-md-4">



 <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>



  <form class="form-signin">
  
  <h1 class="h3 mb-3 font-weight-normal text-white">Please sign up</h1>
  <label for="inputEmail text-white" class="sr-only text-white">Email address</label>


  <%= f.input :name, required: true, autofocus: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-white" } %>
 
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-white" }%>


  <label for="inputPassword" class="sr-only text-white">Password</label>

    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-white" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label text-white" } %>


   <div class="checkbox mb-3">
    <label>
    
    </label>
  </div>


   <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  </form>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
  <div class="col-md-4">

</div>

</div>

</div>

</section>
